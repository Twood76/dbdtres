<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
        style="@style/textView_nexus5_land"
        android:id="@+id/challenge"
        android:text="@string/challenge"
/>

    <Spinner
        style="@style/spinner_nexus5_land"
        android:id="@+id/challenge_spinner"
        android:layout_below="@id/challenge"
/>


    <TextView
        style="@style/textView_nexus5_land"
        android:text="@string/iterations"
        android:id="@+id/iteration"
        android:layout_below="@id/challenge_spinner"

/>

    <Spinner
        style="@style/spinner_nexus5_land"
        android:id="@+id/iteration_spinner"
        android:layout_below="@id/iteration"
/>



    <Button
        style="@style/button_nexus5_small_land"
        android:id="@+id/item_send"
        android:text="@string/item_send"
        android:layout_alignTop="@id/challenge"
        android:layout_toRightOf="@id/challenge"/>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/test_banner_ad"
        android:layout_toRightOf="@id/iteration_spinner"
        android:layout_below="@id/item_send">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>