<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spells"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/spell_class"
        style="@style/textView_nexus5_land_small"
        android:layout_above="@+id/spell_send"
        android:layout_alignEnd="@+id/level"
        android:layout_alignRight="@+id/level"
        android:layout_marginTop="20dp"
        android:text="@string/spell_class"/>

    <Spinner
        style="@style/spinner_nexus5_land_small"
        android:id="@+id/class_spinner"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/spell_class"
        android:layout_marginLeft="20dp"/>


    <TextView
        android:id="@+id/level"
        style="@style/textView_nexus5_land_small"
        android:layout_below="@id/class_spinner"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/level"/>

    <Spinner
        style="@style/spinner_nexus5_land_small"
        android:id="@+id/level_spinner"
        android:layout_below="@id/level"
        android:layout_marginLeft="20dp"/>



    <Button
        style="@style/button_nexus5_small_land"
        android:id="@+id/spell_send"
        android:text="@string/spell_send"
        android:layout_toRightOf="@id/class_spinner"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        />


</RelativeLayout>
