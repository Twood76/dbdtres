<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spells"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/spell_class"
        style="@style/textView_nexus5_land"
        android:layout_alignLeft="@+id/class_spinner"

        android:layout_alignStart="@+id/class_spinner"
        android:text="@string/spell_class"/>

    <Spinner
        android:id="@+id/class_spinner"
        style="@style/spinner_nexus5_land"
        android:layout_below="@+id/spell_class"
        android:layout_toLeftOf="@+id/spell_send"
        android:layout_toStartOf="@+id/spell_send"/>


    <TextView
        android:id="@+id/level"
        style="@style/textView_nexus5_land"
        android:layout_below="@id/class_spinner"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/level"/>

    <Spinner
        style="@style/spinner_nexus5_land"
        android:id="@+id/level_spinner"
        android:layout_below="@id/level"
        android:layout_marginLeft="20dp"/>


    <Button
        android:id="@+id/spell_send"
        style="@style/button_nexus5_land"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/level_spinner"
        android:text="@string/spell_send"/>


</RelativeLayout>
